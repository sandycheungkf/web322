<!DOCTYPE html>
<html lang="en" data-theme="coffee">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection - User History</title>
    <link href="/css/main.css" rel="stylesheet">
</head>

<body tabindex="-1">
    <%- include('partials/navbar', {page: '/userHistory' }) %>

    <div class="max-w-md">
          <h1> <%= session.user.userName %></h1>
          <p>User History: <%= session.user.email %></p>
      </div>

      <table class="user-history">
        <thead>
          <tr>
            <th>Login Date/Time</th>
            <th>Client Information</th>
          </tr>
        </thead>
        <tbody>
            <% session.user.loginHistory.forEach((login) => { %>
              <tr>
                <td><%= login.dateTime %></td>
                <td><%= login.userAgent %></td>
              </tr>
            <% }) %>
        </tbody>
      </table>
      
</body>

</html>
